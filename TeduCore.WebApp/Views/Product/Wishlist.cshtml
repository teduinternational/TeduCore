@model TeduCore.Utilities.Dtos.PagedResult<TeduCore.Application.ECommerce.Products.Dtos.ProductViewModel>
@{
    ViewData["PageTitle"] = "Sản phẩm yêu thích";
}
 <!-- Breadcrumbs -->

<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="/">Trang chủ</a><span>&raquo;</span></li>
                    <li><strong>Sản phẩm yêu thích</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col2-right-layout">
    <div class="main container">
        <div class="row">
            <div class="col-main col-sm-9 col-xs-12">
                <div class="my-account">
                    <div class="page-title">
                        <h2>Sản phẩm yêu thích</h2>
                    </div>
                    <div class="wishlist-item table-responsive">
                        <table class="col-md-12">
                            <thead>
                                <tr>
                                    <th class="th-delate">Bỏ</th>
                                    <th class="th-product">Hình ảnh</th>
                                    <th class="th-details">Tên sản phẩm</th>
                                    <th class="th-price">Đơn giá</th>
                                    <th class="th-total th-add-to-cart">Thêm vào giỏ </th>
                                </tr>
                            </thead>
                            <tbody>
                               @foreach (var item in Model.Results)
                               {
                                   <tr>
                                       <td class="th-delate"><a href="#">X</a></td>
                                       <td class="th-product"><a href="#"><img src="@item.ThumbnailImage" alt="@item.Name"></a></td>
                                       <td class="th-details"><h2><a href="#">@item.Name</a></h2></td>
                                       <td class="th-price">@((item.PromotionPrice??item.Price).ToString("N0"))</td>
                                       <th class="td-add-to-cart"><a href="#">Thêm</a></th>
                                   </tr>
                               }
                            </tbody>
                        </table>
                        <a href="/dat-hang.html" class="all-cart">Mua tất cả</a>
                    </div>
                </div>
            </div>
            <aside class="right sidebar col-sm-3 col-xs-12">
                <div class="sidebar-account block">
                    <div class="sidebar-bar-title">
                        <h3>My Account</h3>
                    </div>
                    <div class="block-content">
                        <ul>
                            <li><a>Account Dashboard</a></li>
                            <li><a href="#">Account Information</a></li>
                            <li><a href="#">Address Book</a></li>
                            <li><a href="#">My Orders</a></li>
                            <li><a href="#">Billing Agreements</a></li>
                            <li><a href="#">Recurring Profiles</a></li>
                            <li><a href="#">My Product Reviews</a></li>
                            <li><a href="#">My Tags</a></li>
                            <li class="current"><a href="#">My Wishlist</a></li>
                            <li><a href="#">My Downloadable</a></li>
                            <li class="last"><a href="#">Newsletter Subscriptions</a></li>
                        </ul>
                    </div>
                </div>
            </aside>
        </div>
    </div>
</section>